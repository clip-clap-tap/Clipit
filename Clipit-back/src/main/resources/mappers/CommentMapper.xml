<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clipit.clipitback.model.dao.CommentDao">
    <select id="selectCommentById" parameterType="int" resultType="Comment">
        SELECT * FROM review
        WHERE id = #{id}
    </select>
    <select id="selectCommentsByPostId" parameterType="int" resultType="Comment">
        SELECT * FROM review
        WHERE post_id = #{id}
    </select>
    <select id="selectCommentsByUserId" parameterType="String" resultType="Comment">
        SELECT * FROM review
        WHERE user_id = #{id}
    </select>
    <insert id="insertComment" parameterType="Map">
        INSERT INTO review
        VALUES (#{postId}, #{userId}, #{content})
    </insert>
    <update id="updateComment" parameterType="Comment">
        UPDATE review
        SET content = #{content}
        WHERE id = #{id}
    </update>
    <delete id="deleteComment">
        DELETE FROM review
        WHERE id = #{id}
    </delete>
</mapper>