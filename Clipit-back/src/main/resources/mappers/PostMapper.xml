<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.clipit.clipitback.model.dao.PostDao">
    <select id="searchPost" resultType="Post">
        SELECT * FROM post;
    </select>
    <select id="selectPostById" resultType="Post">
        SELECT * FROM post
        WHERE id = #{id}
    </select>
    <select id="selectPostsByWriterId" resultType="Post">
        SELECT * FROM post
        WHERE writer_id = #{writerId}
    </select>
    <select id="selectFavoritePostsByUserId" resultType="Post">

    </select>
    <select id="selectVisitedPostsByUserId" resultType="Post">

    </select>
    <update id="updatePost" parameterType="Post">

    </update>
</mapper>